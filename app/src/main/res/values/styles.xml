<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- remove shadow below action bar -->
         <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="GeneralInputLayout">
        <item name="errorTextAppearance">@style/GeneralFormHintText</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="GeneralEditText">
        <item name="android:textAppearance">@style/GeneralFormText</item>
        <item name="android:textColorHint">#2F4F4F</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textAppearance">@style/FormText</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:color">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextInputLayoutLoginForm">
        <item name="hintTextAppearance">@style/FormText</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="H1_Light_Spacing">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/title_big</item>
        <item name="android:letterSpacing">0.10</item>
    </style>

    <style name="H3_Light">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="H5">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/sub</item>
    </style>
    <style name="Light_sub">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="FormText">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/sub</item>
    </style>

    <style name="GeneralFormText">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/sub</item>
    </style>

    <style name="GeneralFormHintText">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/par</item>
    </style>

    <style name="GeneralFormErrorText">
        <item name="android:color">@color/errorRed</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/par</item>
    </style>

    <style name="Par_Light">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/par</item>
    </style>

    <style name="Par_regular">
        <item name="android:color">#000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/par</item>
    </style>

    <style name="ButtonTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">@dimen/sub</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
