<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/headerLogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_login_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:contentDescription="App Logo"/>

    <TextView
        android:id="@+id/greetingsWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_super_large"
        app:layout_constraintTop_toBottomOf="@+id/headerLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/H1_Light_Spacing"
        android:text="First, We need to know"/>
    <TextView
        android:id="@+id/greetingsSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/greetingsWelcome"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/H3_Light"
        android:text="Who you are."/>

    <RadioGroup
        android:id="@+id/type_user"
        android:layout_width="330dp"
        android:layout_height="207dp"
        android:layout_marginTop="@dimen/spacing_super_large"
        android:theme="@style/TextInputLayoutLoginForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingsSignIn">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulog Employee"
            android:id="@+id/type_bulog"
            android:textSize="40px">
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:id="@+id/type_other"
            android:textSize="40px">
        </RadioButton>
    </RadioGroup>


    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_btn_color_primary"
        android:padding="@dimen/spacing_medium"
        android:text="NEXT"
        android:textAppearance="@style/ButtonTextAppearance"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_user" />

</androidx.constraintlayout.widget.ConstraintLayout>