<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PromoDetailActivity">
    <ImageView
            android:id="@+id/promo_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Par_regular"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="PROMO TITLE"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Par_regular"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:text="10/10/2020 - 10/10/2020"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean vulputate accumsan velit, id pellentesque nibh finibus eu. Nam sed leo."/>
    </LinearLayout>

</LinearLayout>