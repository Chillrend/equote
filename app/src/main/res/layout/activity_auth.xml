<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@color/colorPrimary"
        tools:context=".AuthActivity">

    <ImageView
            android:id="@+id/headerLogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_login_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/spacing_extra_large"
            android:contentDescription="App Logo"/>

    <TextView
            android:id="@+id/greetingsWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_super_large"
            app:layout_constraintTop_toBottomOf="@+id/headerLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/H1_Light_Spacing"
            android:text="@string/welcome"/>
    <TextView
            android:id="@+id/greetingsSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/greetingsWelcome"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/H3_Light"
            android:text="@string/sign_in_to_continue"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_super_large"
            app:layout_constraintTop_toBottomOf="@id/greetingsSignIn"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/TextInputLayoutLoginForm"
            >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_circular_form"
                android:hint="@string/email"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:theme="@style/TextInputEditText"
                android:autofillHints="username"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pwd_signin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@+id/email_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleContentDescription="Lihat Password"
            app:passwordToggleDrawable="@drawable/selector_password_v_toggler"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            android:theme="@style/TextInputLayoutLoginForm"
            >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pwd_signin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:background="@drawable/background_circular_form"
                android:theme="@style/TextInputEditText"
                android:inputType="textPassword"
                android:hint="@string/password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_extra_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pwd_signin_layout"
            android:padding="@dimen/spacing_medium"
            android:background="@drawable/background_btn_color_primary"
            android:textAppearance="@style/ButtonTextAppearance"
            android:textColor="#FFF"
            android:text="@string/signin"/>
    <Button
            android:id="@+id/btn_sign_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
            android:drawableStart="@drawable/ic_google_logo"
            android:padding="@dimen/spacing_medium"
            android:background="@drawable/background_btn_color_white"
            android:textAppearance="@style/ButtonTextAppearance"
            android:textColor="#000"
            android:text="@string/signin_google"/>
    <TextView
            android:id="@+id/sign_up_text_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_with_google"
            android:textAlignment="center"
            android:text="@string/sign_up_here" />

</androidx.constraintlayout.widget.ConstraintLayout>